rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserId() {
      return request.auth.uid;
    }
    
    function ledgerDataHasMember(ledgerData) {
      return ledgerData.memberIds != null &&
             ledgerData.memberIds.hasAny([getUserId()]);
    }
    
    function isLedgerOwner(ledgerId) {
      return isAuthenticated() && 
             getLedger(ledgerId).data.ownerId == getUserId();
    }
    
    function isLedgerMember(ledgerId) {
      return isAuthenticated() && (
        isLedgerOwner(ledgerId) ||
        ledgerDataHasMember(getLedger(ledgerId).data)
      );
    }
    
    function isLedgerMemberResource() {
      return isAuthenticated() && (
        resource.data.ownerId == getUserId() ||
        ledgerDataHasMember(resource.data)
      );
    }
    
    // members 배열에서 현재 사용자가 editor 또는 owner 역할인지 확인 (최대 10개 멤버까지 지원)
    function isMemberEditorOrOwner(ledgerData) {
      return ledgerData.members != null && (
        (ledgerData.members.size() > 0 && ledgerData.members[0].userId == getUserId() && (ledgerData.members[0].role == 'editor' || ledgerData.members[0].role == 'owner')) ||
        (ledgerData.members.size() > 1 && ledgerData.members[1].userId == getUserId() && (ledgerData.members[1].role == 'editor' || ledgerData.members[1].role == 'owner')) ||
        (ledgerData.members.size() > 2 && ledgerData.members[2].userId == getUserId() && (ledgerData.members[2].role == 'editor' || ledgerData.members[2].role == 'owner')) ||
        (ledgerData.members.size() > 3 && ledgerData.members[3].userId == getUserId() && (ledgerData.members[3].role == 'editor' || ledgerData.members[3].role == 'owner')) ||
        (ledgerData.members.size() > 4 && ledgerData.members[4].userId == getUserId() && (ledgerData.members[4].role == 'editor' || ledgerData.members[4].role == 'owner')) ||
        (ledgerData.members.size() > 5 && ledgerData.members[5].userId == getUserId() && (ledgerData.members[5].role == 'editor' || ledgerData.members[5].role == 'owner')) ||
        (ledgerData.members.size() > 6 && ledgerData.members[6].userId == getUserId() && (ledgerData.members[6].role == 'editor' || ledgerData.members[6].role == 'owner')) ||
        (ledgerData.members.size() > 7 && ledgerData.members[7].userId == getUserId() && (ledgerData.members[7].role == 'editor' || ledgerData.members[7].role == 'owner')) ||
        (ledgerData.members.size() > 8 && ledgerData.members[8].userId == getUserId() && (ledgerData.members[8].role == 'editor' || ledgerData.members[8].role == 'owner')) ||
        (ledgerData.members.size() > 9 && ledgerData.members[9].userId == getUserId() && (ledgerData.members[9].role == 'editor' || ledgerData.members[9].role == 'owner'))
      );
    }
    
    function canEdit(ledgerId) {
      return isAuthenticated() && (
        isLedgerOwner(ledgerId) ||
        isMemberEditorOrOwner(getLedger(ledgerId).data)
      );
    }
    
    function getLedger(ledgerId) {
      return get(/databases/$(database)/documents/ledgers/$(ledgerId));
    }
    
    // users
    match /users/{userId} {
      allow read, write: if isAuthenticated() && getUserId() == userId;
    }
    
    // ledgers + 서브컬렉션 (transactions, assets, assetLogs)
    match /ledgers/{ledgerId} {
      allow read: if isLedgerMemberResource();
      allow create: if isAuthenticated() && request.resource.data.ownerId == getUserId();
      allow update: if isAuthenticated() && (
        isLedgerOwner(ledgerId) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'memberIds', 'updatedAt'])
      );
      allow delete: if isAuthenticated() && isLedgerOwner(ledgerId);
      
      // transactions 서브컬렉션
      // transactions/{monthKey} 문서 (월별 컬렉션 문서) - 목록 조회용
      match /transactions/{monthKey} {
        allow read: if isAuthenticated() && isLedgerMember(ledgerId);
        
        // transactions/{monthKey}/items/{transactionId} - 실제 거래내역 문서
        match /items/{transactionId} {
          allow read: if isAuthenticated() && isLedgerMember(ledgerId);
          allow create: if isAuthenticated() && isLedgerMember(ledgerId) && canEdit(ledgerId);
          allow update: if isAuthenticated() && isLedgerMember(ledgerId) && canEdit(ledgerId);
          allow delete: if isAuthenticated() && isLedgerMember(ledgerId) && canEdit(ledgerId);
        }
      }
      
      // assets 서브컬렉션
      match /assets/{assetId} {
        allow read: if isAuthenticated() && isLedgerMember(ledgerId);
        allow create: if isAuthenticated() && isLedgerMember(ledgerId) && canEdit(ledgerId);
        allow update: if isAuthenticated() && isLedgerMember(ledgerId) && canEdit(ledgerId);
        allow delete: if isAuthenticated() && isLedgerMember(ledgerId) && canEdit(ledgerId);
      }
      
      // assetLogs 서브컬렉션
      match /assetLogs/{logId} {
        allow read: if isAuthenticated() && isLedgerMember(ledgerId);
        allow create: if isAuthenticated() && isLedgerMember(ledgerId) && canEdit(ledgerId);
        allow update, delete: if false;
      }
    }
    
    // categories
    match /categories/{ledgerId} {
      allow read: if isAuthenticated() && isLedgerMember(ledgerId);
      allow create, update: if isAuthenticated() && isLedgerMember(ledgerId) && canEdit(ledgerId);
      allow delete: if isAuthenticated() && isLedgerOwner(ledgerId);
    }
    
    // invitations
    match /invitations/{invitationId} {
      allow read: if isAuthenticated() && (
        isLedgerOwner(resource.data.ledgerId) || 
        resource.data.email == request.auth.token.email
      );
      allow create: if isAuthenticated() && isLedgerOwner(request.resource.data.ledgerId);
      allow update: if isAuthenticated() && (
        isLedgerOwner(resource.data.ledgerId) || 
        resource.data.email == request.auth.token.email
      );
      allow delete: if isAuthenticated() && isLedgerOwner(resource.data.ledgerId);
    }
  }
}
